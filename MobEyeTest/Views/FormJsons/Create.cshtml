@model MobEyeTest.Models.FormJson

@{
    ViewData["Title"] = "Create";
}



<h4>Create Dynamic Form</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FormContent" class="control-label"></label>
                <textarea style="width: 900px;height:400px" asp-for="FormContent" class="form-control" ></textarea>
                <span asp-validation-for="FormContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
